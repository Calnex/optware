
#!/bin/sh

set -e

# Install the endor system software
PATH=/opt/etc/bin:$PATH
su calnex -c '/opt/bin/ipkg update'
su calnex -c '/opt/bin/ipkg install endor'

# We need to cleanup and unmount here.
rm -rf /opt/etc/init.d/S00SystemConfiguration

for i in /opt/etc/init.d/S??* ;do
        # Ignore dangling symlinks (if any).
        [ ! -f "$i" ] && continue

        su calnex -c "$i stop"
done

sleep 1